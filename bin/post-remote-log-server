require 'rack'
require 'thin'
require 'post_remote_log/server'

OPTIONS = {
	:host => "0.0.0.0",
	:port => "9080",
	:dump_path => File.join(Dir.pwd, "logs")
}

Thin::Server.start(OPTIONS[:host], OPTIONS[:port], PostRemoteLog::Server.new(OPTIONS))
